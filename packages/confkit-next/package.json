{
  "name": "@confkit/next",
  "version": "0.0.1",
  "private": false,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "license": "MIT",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./client": {
      "types": "./dist/client/runtime.d.ts",
      "import": "./dist/client/runtime.js"
    },
    "./client/loader": {
      "types": "./dist/client/loader.d.ts",
      "import": "./dist/client/loader.js",
      "require": "./dist/client/loader.cjs"
    },
    "./overlay": {
      "types": "./dist/overlay/runtime.d.ts",
      "import": "./dist/overlay/runtime.js"
    },
    "./overlay/loader": {
      "types": "./dist/overlay/loader.d.ts",
      "import": "./dist/overlay/loader.js",
      "require": "./dist/overlay/loader.cjs"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsup src/index.ts src/overlay/loader.ts src/client/loader.ts --dts --format esm,cjs --sourcemap --out-dir dist --clean --platform node --target node18 --external confkit --external @confkit/* --no-config && tsup src/overlay/runtime.ts src/client/runtime.ts --dts --format esm --sourcemap --out-dir dist --platform browser --target es2020 --external confkit --external @confkit/* --no-config",
    "check-types": "tsc -p tsconfig.json --noEmit",
    "test": "vitest --run",
    "test:watch": "vitest",
    "coverage": "vitest --coverage --run",
    "size": "size-limit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "confkit",
    "nextjs",
    "next",
    "turbopack",
    "webpack",
    "middleware",
    "env"
  ],
  "author": "Alex Pink",
  "contributors": [
    { "name": "Alex Pink", "url": "https://github.com/alexdotpink" }
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexdotpink/confkit.git",
    "directory": "packages/confkit-next"
  },
  "bugs": {
    "url": "https://github.com/alexdotpink/confkit/issues"
  },
  "homepage": "https://github.com/alexdotpink/confkit/tree/main/packages/confkit-next#readme",
  "engines": { "node": ">=18" },
  "funding": { "type": "github", "url": "https://github.com/sponsors/alexdotpink" },
  "peerDependencies": {
    "next": ">=15.0.0",
    "confkit": ">=0.0.1 <1.0.0"
  },
  "devDependencies": {
    "confkit": "workspace:*"
  },
  "sideEffects": false,
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "size-limit": [
    {
      "path": "dist/client/runtime.js",
      "limit": "10 KB",
      "gzip": true
    },
    {
      "path": "dist/overlay/runtime.js",
      "limit": "10 KB",
      "gzip": true
    }
  ]
}
